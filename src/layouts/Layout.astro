---
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
	mobileBackground: string;
	tabletBackground: string;
	desktopBackground: string;
}

const { title, mobileBackground, tabletBackground, desktopBackground } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&family=Bellefair&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>

<style
	is:global lang="scss"
	define:vars={{
		mobileBackground,
		tabletBackground,
		desktopBackground,
	}}
>
	@use "../styles/normalize.css";
	@use "../styles/vars" as v;

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-size: 62.5%;
	}

	body {
		width: 100%;
		min-height: 100vh;

		font-size: 1.6rem;
		font-family: v.$secondaryFont;

		background-color: v.$black;
		color: v.$white;

		background-image: var(--mobileBackground);
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;

		@media screen and (width >= 768px) {
			background-image: var(--tabletBackground);
		}

		@media screen and (width >= 992px) {
			background-image: var(--desktopBackground);
		}
	}
</style>
