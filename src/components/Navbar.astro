---
import { Image } from "astro:assets";

import PageLogo from "../assets/shared/logo.svg";
import MenuLogo from "../assets/shared/icon-hamburger.svg"; 
---

<header>
  <Image src={PageLogo} alt="Page Logo" class="pageLogo"/>

  <Image src={MenuLogo} alt="Menu Mobile Button" class="menuButton"/>

  <ul>
    <li>HOME</li>
    <li>DESTINATION</li>
    <li>CREW</li>
    <li>TECHNOLOGY</li>
  </ul>
</header>

<style lang="scss">
  @use "../styles/vars" as v;

  header {
    width: 100%;

    position: fixed;
    left: 0;
    top: 0;

    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 2.4rem;

    @media screen and (width >= 768px) {
      padding-left: 3.5rem;
      padding-right: 0;
      padding-top: 0;
    }
  }

  .pageLogo {
    width: 4rem;
    height: 4rem;

    @media screen and (width >= 768px) {
      width: 4.8rem;
      height: 4.8rem;
    }
  }

  @media screen and (width >= 768px) {
    .menuButton {
      display: none;
    }
  }

  ul {
    display: none;
    align-items: center;
    column-gap: 3rem;
    
    padding: 4rem 6rem 0 6rem;

    list-style: none;

    background-color: rgba(255, 255, 255, 0.04);

    @media screen and (width >= 768px) {
      display: flex;
    } 

    li {
      padding-bottom: 4rem;

      font-size: 1.4rem;
      letter-spacing: 0.236rem;

      border-bottom: 0.2rem transparent solid;

      &:hover {
        border-bottom: 0.2rem v.$white solid;
      }
    }
  }

  
</style>